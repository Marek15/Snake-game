<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="600.0" prefWidth="600.0" styleClass="menuBackground" stylesheets="@../css/custom.css" xmlns="http://javafx.com/javafx/11.0.10-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.MenuController">
    <children>
        <VBox alignment="CENTER" layoutY="-2.0" prefHeight="600.0" prefWidth="600.0" AnchorPane.bottomAnchor="2.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="-2.0">
            <children>
                <Label alignment="CENTER" prefHeight="72.0" prefWidth="548.0" styleClass="title" text="SNAKE GAME">
                    <VBox.margin>
                        <Insets bottom="80.0" />
                    </VBox.margin>
                </Label>
                  <Button mnemonicParsing="false" onAction="#switchToGame" stylesheets="@../css/custom.css" text=" Start Game" textAlignment="CENTER" textFill="WHITE">
                      <padding>
                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                      </padding>
                  </Button>
                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="458.0">
                    <children>
                        <Label styleClass="subTitle" text="Difficulty">
                            <HBox.margin>
                                <Insets right="30.0"/>
                            </HBox.margin>
                        </Label>
                        <Slider fx:id="difficultySlider" blockIncrement="1.0" majorTickUnit="1.0" max="5.0" min="1.0"
                                minorTickCount="0" prefHeight="15.0" prefWidth="167.0" showTickLabels="true"
                                snapToTicks="true" style="-fx-font-size: 15px;" value="1.0">
                            <cursor>
                                <Cursor fx:constant="DEFAULT"/>
                            </cursor>
                        </Slider>
                    </children>
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </HBox>
            <Pane prefHeight="88.0" prefWidth="600.0">
               <children>
                      <Button contentDisplay="CENTER" disable="true" layoutX="254.0" layoutY="17.0" mnemonicParsing="false" text="Score" textFill="WHITE">
                          <opaqueInsets>
                              <Insets />
                          </opaqueInsets>
                      </Button>
                  <Label layoutX="355.0" layoutY="22.0" prefHeight="44.0" prefWidth="156.0" styleClass="alert" text="Coming soon !!!" textAlignment="CENTER" />
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Pane>
                <Button mnemonicParsing="false" onAction="#quitGame" text="Quit" textFill="WHITE">
                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </Button>
            </children>
            <cursor>
                <Cursor fx:constant="DEFAULT" />
            </cursor>
        </VBox>
    </children>
</AnchorPane>
