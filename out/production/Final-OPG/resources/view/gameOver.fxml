<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="600.0" styleClass="menuBackground"
            stylesheets="@../css/custom.css" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="main.controllers.MenuController">
    <children>
        <VBox alignment="CENTER" layoutX="100.0" layoutY="40.0" prefHeight="320.0" prefWidth="400.0"
              AnchorPane.bottomAnchor="40.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0"
              AnchorPane.topAnchor="40.0">
            <children>
                <Label style="-fx-font-size: 50px;" styleClass="title" text="GAME OVER">
                    <font>
                        <Font name="Arial Black" size="41.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="80.0"/>
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" prefHeight="39.0" prefWidth="400.0">
                    <children>
                        <Label styleClass="subTitle" text="Score : ">
                            <font>
                                <Font name="Arial Black" size="15.0"/>
                            </font>
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </Label>
                        <Label fx:id="gameOverScoreLabel" styleClass="subTitle">
                            <font>
                                <Font name="Arial" size="15.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                </HBox>
                <Button mnemonicParsing="false" onAction="#switchToGame" text="Restart">
                    <VBox.margin>
                        <Insets top="30.0"/>
                    </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#switchToMainMenu" text="Back to Main menu">
                    <VBox.margin>
                        <Insets top="30.0"/>
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
